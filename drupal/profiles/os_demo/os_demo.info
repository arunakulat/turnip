; $Id$

; Project-specific installation profile

base = opensourcery_install

name = OpenSourcery demo server
description = Installation for demonstrating OpenSourcery features.
theme = doune

; Modules
dependencies[] = webform

; Features
dependencies[] = os_base
dependencies[] = os_blog
dependencies[] = os_event
dependencies[] = os_slideshow

; Create a super user
users[super][uid] = 1
users[super][name] = OpenSourcery Administrator
users[super][mail] = jhedstrom@opensourcery.com
users[super][roles] = administrator
users[super][status] = 1

; Create an admin account
users[admin][uid] = 2
users[admin][name] = Administrator
users[admin][mail] = alex@opensourcery.com
users[admin][roles] = administrator
users[admin][status] = 1

; Create a site editor
users[site][uid] = 3
users[site][name] = Editor
users[site][mail] = editor@example.com
users[site][roles] = site editor
users[site][status] = 1

; Variables
variables[site_name] = OpenSourcery Demo Server
variables[site_mail] = support@opensourcery.com
variables[date_default_timezone_name] = America/Los_Angeles
variables[date_default_timezone] = -25200
variables[configurable_timezones] = 1
variables[site_footer] = "&copy;@year OpenSourcery"
variables[site_frontpage] = welcome

; Add a front page
nodes[home][type] = page
nodes[home][title] = "Welcome"
nodes[home][body] = "This is the OpenSourcery default Drupal installation demo server. Have a look around."
nodes[home][uid] = 1
nodes[home][path] = welcome
